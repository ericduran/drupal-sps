<?php
class SPSTestManagerUnitTest extends SPSBaseUnitTest {
  static function getInfo() {
    return array(
      'name' => 'SPS Test Manager Unit Tests',
      'description' => 'Test the Test Manager Ateration to the Manager Class',
      'group' => 'SPS',
    );
  }
  public function testTestManager_DefaultSettings() {
    $start['state_controller'] = new \Drupal\sps\Test\StorageController();
    $start['override_controller'] = new \Drupal\sps\Test\StorageController();
    $start['config_controller'] = new \Drupal\sps\Test\StorageController();
    $start['plugin_controller'] = new \Drupal\sps\Test\PluginController(array());
  
    $manager = new \Drupal\sps\Test\Manager();

    $end['state_controller'] = $manager->state_controller;
    $end['override_controller'] = $manager->override_controller;
    $end['config_controller'] = $manager->config_controller;
    $end['plugin_controller'] = $manager->plugin_controller;
    $this->assertEqual($start, $end, "A new Test Manager with no params stores default empty test controllers", "SPS");
  }
  public function testTestManager_AlterSettings() {
    $start['state_controller'] = new \Drupal\sps\Test\StorageController(array("data"=>"a"));
    $start['override_controller'] = new \Drupal\sps\Test\StorageController(array("data"=>"b"));
    $start['config_controller'] = new \Drupal\sps\Test\StorageController(array("data"=>"c"));
    $start['plugin_controller'] = new \Drupal\sps\Test\PluginController(array("widget"=>array()));
  
    $manager = new \Drupal\sps\Test\Manager(
      $start['state_controller'],
      $start['override_controller'],
      $start['config_controller'],
      $start['plugin_controller']
    );

    $end['state_controller'] = $manager->state_controller;
    $end['override_controller'] = $manager->override_controller;
    $end['config_controller'] = $manager->config_controller;
    $end['plugin_controller'] = $manager->plugin_controller;
    $this->assertEqual($start, $end, "A new Test Manager with params stores them as controllers", "SPS");
  }
}
